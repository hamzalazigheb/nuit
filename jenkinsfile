ppipeline {
    agent any

    stages {
        stage('Checkout Code') {
            steps {
                git url: 'https://github.com/hamzalazigheb/nuit'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    def imageName = "hamzalazigheb/horizon:latest"
                    docker.build(imageName)
                }
            }
        }
    }

    post {
        always {
            cleanWs()
            script {
                docker.image("hamzalazigheb/horizon:latest").remove()
            }
        }
    }
}

